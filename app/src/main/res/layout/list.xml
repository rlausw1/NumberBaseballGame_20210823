<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/computermessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/computerMessageTxt"
            android:gravity="right"
            android:paddingLeft="10dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/말풍선2"
            android:text="컴퓨터가 말한 내용"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/usemessageLayout"
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/usemessageTxt"
            android:gravity="center_vertical"
            android:layout_width="150dp"
            android:background="@drawable/말풍선1"
            android:layout_height="50dp"
            android:text="내가 말한 내용"/>



    </LinearLayout>

</LinearLayout>